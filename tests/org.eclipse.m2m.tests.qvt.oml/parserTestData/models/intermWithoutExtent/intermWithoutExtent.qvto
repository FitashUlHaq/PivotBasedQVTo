modeltype Ecore uses 'http://www.eclipse.org/emf/2002/Ecore';

transformation intermWithoutExtent(in srcModel : Ecore);

intermediate class LeafAttribute {
	_name:String;
	_attr:EAttribute;
};

main() {
	var v := srcModel.objects()[EClass]->collect(c|c.eAllAttributes->map attr2LeafAttrs('p_'));
	assert fatal (v->size() = 2);
}

mapping EAttribute::attr2LeafAttrs(in prefix:String) : Sequence(LeafAttribute) {
	init {
		result := Sequence {
			object LeafAttribute {_attr:=object EAttribute{name := self.name}; name:=prefix+self.name}
		}
	}
}

